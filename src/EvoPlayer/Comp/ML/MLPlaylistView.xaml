<UserControl x:Class="EvoPlayer.Comp.ML.MLPlaylistView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EvoPlayer.Comp.ML"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Margin="0">

    <Grid Margin="0">
        <ListView x:Name="lstvItems" Grid.Column="0" Grid.Row="0" Margin="0">
            <ListView.ContextMenu>
                <ContextMenu>
                    <MenuItem x:Name="mnuRemoveItem" Header="Remove" Click="mnuRemoveItem_Click" />
                </ContextMenu>
            </ListView.ContextMenu>
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Title" Width="200" DisplayMemberBinding="{Binding Title}" />
                    <GridViewColumn Header="Duration" DisplayMemberBinding="{Binding Duration}" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</UserControl>
